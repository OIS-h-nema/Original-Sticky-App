<Window x:Class="StickyNoteApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定"
        Width="320"
        Height="380"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel Margin="16">
        <GroupBox Header="サイズ" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="幅:" Grid.Row="0" VerticalAlignment="Center" />
                <TextBox x:Name="WidthBox" Grid.Row="0" Grid.Column="1" />
                <TextBlock Text="px" Grid.Row="0" Grid.Column="2" />
                <TextBlock Text="高さ:" Grid.Row="1" VerticalAlignment="Center" />
                <TextBox x:Name="HeightBox" Grid.Row="1" Grid.Column="1" />
                <TextBlock Text="px" Grid.Row="1" Grid.Column="2" />
            </Grid>
        </GroupBox>

        <GroupBox Header="フォント" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="種類:" Grid.Row="0" VerticalAlignment="Center" />
                <ComboBox x:Name="FontFamilyBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" />

                <TextBlock Text="サイズ:" Grid.Row="1" VerticalAlignment="Center" />
                <TextBox x:Name="FontSizeBox" Grid.Row="1" Grid.Column="1" />
                <TextBlock Text="pt" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" />

                <TextBlock Text="色:" Grid.Row="2" VerticalAlignment="Center" />
                <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <Rectangle x:Name="ColorPreview" Width="24" Height="24" Stroke="Gray" Margin="0,0,8,0" />
                    <TextBox x:Name="FontColorBox" Width="120" TextChanged="OnFontColorChanged" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <CheckBox x:Name="IsLockedCheck" Content="位置を固定する" Margin="0,0,0,12" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="保存" Click="OnSave" Width="80" Margin="0,0,8,0" />
            <Button Content="キャンセル" Click="OnCancel" Width="80" />
        </StackPanel>
    </StackPanel>
</Window>
